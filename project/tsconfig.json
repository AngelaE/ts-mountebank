{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "es2022",
      "DOM",
      "ES6"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true
  }
}
